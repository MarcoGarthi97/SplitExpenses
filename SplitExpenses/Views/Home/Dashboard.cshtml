@{
    ViewBag.Title = "Home Page";
}

<div class="row bg-dark">
    <div class="col-2">
        <div class="row">
            <div class="row">
                <h2>Menu</h2>
            </div>
            <hr>
            <div class="row">
                <ul class="nav nav-pills flex-column mb-auto">
                    <li>
                        <a href="#" id="btnDashboard" class="nav-link text-white active">
                            Dashboard
                        </a>
                    </li>
                    <li>
                        <a href="#" id="btnNotification" class="nav-link text-white position-relative">
                            Notification
                        </a>
                    </li>
                    <li>
                        <a href="#" class="nav-link text-white">
                            Logout
                        </a>
                    </li>
                </ul>
            </div>
            <hr>
        </div>
    </div>

    <div class="col-10" style="margin-top: 1%;" id="divLoadComponent">
        @{
            Html.RenderPartial("Accounts");
        }
    </div>
</div>

<script>
    const btnDashboard = document.getElementById('btnDashboard')

    var _user = ''

    btnDashboard.addEventListener('click', function () {
        $('#divLoadComponent').empty()

        var url = '@Url.Action("Accounts", "Home")'
        $('#divLoadComponent').load(url)
    })

    GetInfoUser()
    function GetInfoUser() {
        $.ajax({
            url: '@Url.Action("GetUser", "Dashboard")',
            type: "POST",
            success: function (result) {
                _user = result
            },
            error: function (error) {
                console.log("error")
                console.log(error)
            }
        })
    }

    $(function () {
            // Reference the auto-generated proxy for the hub.  
            var chat = $.connection.chatHub;
            // Create a function that the hub can call back to display messages.
            chat.client.GetCountInvitations = function (result) {
                // Add the message to the page. 
                console.log(result)
            };
            // Start the connection.
            $.connection.hub.start().done(function () {
                chat.server.notify()
            });
        });

</script>
